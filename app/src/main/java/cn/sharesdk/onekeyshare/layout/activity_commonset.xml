<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/gray_bg">
    <include layout="@layout/top_bar_btn" />
    <ScrollView
        android:scrollbars="none"
        android:fadingEdge="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:overScrollMode="never"
        android:background="@color/gray_bg">
        <RelativeLayout android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
            <LinearLayout android:orientation="vertical"
                          android:background="@color/white"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
              >
                <RelativeLayout
                    android:id="@+id/relLay_set_feed"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/personal_r2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消息通知"
                        android:layout_centerVertical="true"
                        style="@style/personal_txt"
                        android:id="@+id/textView2" />
                    <ToggleButton
                                  android:layout_width="wrap_content"
                                  android:layout_height="30.0dp"
                                  android:checked="true"
                                  android:shadowColor="@color/cltxt_groupsetting_info"
                                  android:shadowDy="1.0"
                                  android:shadowRadius="0.2"
                                  android:layout_alignParentRight="true"
                                  android:layout_centerVertical="true"
                                  style="@style/Widget.Button.Toggle" />
                </RelativeLayout>
                <View android:background="@color/view"
                      android:layout_width="fill_parent"
                      android:layout_height="0.5dip"
                      android:layout_marginLeft="60.0dip"
                      android:layout_marginTop="13.5dip" />
                <RelativeLayout android:id="@+id/relLay_set_update"
                                android:clickable="true"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                style="@style/personal_r2">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="无图浏览"
                              android:layout_centerVertical="true"
                              style="@style/personal_txt"
                              android:id="@+id/textView" />
                    <ToggleButton
                                  android:layout_width="wrap_content"
                                  android:layout_height="30.0dp"
                                  android:checked="true"
                                  android:shadowColor="@color/cltxt_groupsetting_info"
                                  android:shadowDy="1.0"
                                  android:shadowRadius="0.2"
                                  android:layout_alignParentRight="true"
                                  android:layout_centerVertical="true"
                                  style="@style/Widget.Button.Toggle" />
                </RelativeLayout>
                <View android:background="@color/view"
                      android:layout_width="fill_parent"
                      android:layout_height="10.0dip"
                      android:layout_marginTop="13.5dip" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_bg">
                <Button
                    android:textColor="@color/exit_button_text_color"
                    android:id="@+id/btn_common_set_exit"
                    android:background="@drawable/bg_round_white_corner"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginTop="@dimen/contact_activity_header_padding_top"
                    android:layout_marginRight="12.0dip"
                    android:layout_marginBottom="@dimen/contact_activity_header_padding_top"
                    android:text="退出当前账号"  />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>