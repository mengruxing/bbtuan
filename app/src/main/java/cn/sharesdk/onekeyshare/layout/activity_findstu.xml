<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@color/gray_bg">
<include
    layout="@layout/top_bar_btn"
    >
</include>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="visible">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="学生信息"
        android:layout_gravity="center"
        style="@style/style_item_font_17"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="5.0dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10.0dip"
            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip">
                <TextView
                    android:id="@+id/tv_findstu_name"
                    style="@style/AccountText"
                    android:textColor="@color/black"
                    android:text="姓名：" />
                <EditText
                    android:id="@+id/edit_findstu_name"
                    style="@style/AccountEdit"
                    android:imeOptions="actionDone"
                    android:maxLength="10"
                    android:textColorHint="@color/gray_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_findstu_name"
                    android:ems="10"
                    android:hint="请输入姓名"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">
                </EditText>
            </RelativeLayout>
        </LinearLayout>
        <TextView style="@style/SeparatorLine" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10.0dip">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip">
                <TextView
                    android:id="@+id/tv_findstu_college"
                    style="@style/AccountText"
                    android:text="学院："
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/edit_findstu_college"
                    style="@style/AccountEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_findstu_college"
                    android:ems="10"
                    android:hint="请输入学院"
                    android:imeOptions="actionDone"
                    android:maxLength="10"
                    android:textColorHint="@color/gray_light"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">
                </EditText>
            </RelativeLayout>
        </LinearLayout>
        <TextView style="@style/SeparatorLine" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10.0dip">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip">

                <TextView
                    android:id="@+id/tv_findstut_grade"
                    style="@style/AccountText"
                    android:text="年级："
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_findstu_grade"
                    style="@style/AccountEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="大一"
                    android:imeOptions="actionDone"
                    android:maxLength="10"
                    android:textColorHint="@color/gray_light"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_findstut_grade"
                    android:layout_toEndOf="@+id/tv_findstut_grade">
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/group_activities_white_down"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_findstu_grade"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView style="@style/SeparatorLine" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10.0dip">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip">
                <TextView
                    android:id="@+id/tv_findstu_phone"
                    style="@style/AccountText"
                    android:text="联系方式："
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/edit_findstu_phone"
                    style="@style/AccountEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_findstu_phone"
                    android:ems="10"
                    android:hint="请输入联系方式(手机号码)"
                    android:imeOptions="actionDone"
                    android:maxLength="10"
                    android:password="true"
                    android:textColorHint="@color/gray_light"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">
                </EditText>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="要求"
                android:layout_gravity="center"
                style="@style/style_item_font_17"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginBottom="5.0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10.0dip"
                    >
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">
                        <TextView
                            android:id="@+id/tv_findstuw_sub"
                            style="@style/AccountText"
                            android:textColor="@color/black"
                            android:text="想学科目：" />

                        <EditText
                            android:id="@+id/edit_findstuw_sub"
                            style="@style/AccountEdit"
                            android:imeOptions="actionDone"
                            android:maxLength="10"
                            android:textColorHint="@color/gray_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_findstuw_sub"
                            android:ems="10"
                            android:hint="请输入科目"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true">

                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <TextView style="@style/SeparatorLine" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10.0dip">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">

                        <TextView
                            android:id="@+id/tv_findstuw_sex"
                            style="@style/AccountText"
                            android:text="老师性别："
                            android:textColor="@color/black"/>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:fadingEdge="none"
                            android:layout_gravity="center"
                            android:weightSum="1"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true">

                            <RadioButton
                                android:id="@+id/rb_findstuw_nan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:button="@drawable/color_radiobutton"
                                android:text="男"
                                />
                            <RadioButton
                                android:id="@+id/rb_findstuw_nv"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:button="@drawable/color_radiobutton"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="女"/>
                            <RadioButton
                                android:id="@+id/rb_findstuw_else"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:button="@drawable/color_radiobutton"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="不限"/>
                        </RadioGroup>
                    </RelativeLayout>
                </LinearLayout>
                <TextView style="@style/SeparatorLine" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10.0dip">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">

                        <TextView
                            android:id="@+id/tv_findstuw_style"
                            style="@style/AccountText"
                            android:text="上课方式："
                            android:textColor="@color/black"/>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:fadingEdge="none"
                            android:layout_gravity="center"
                            android:weightSum="1"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_findstuw_style"
                            android:layout_toEndOf="@+id/tv_findstuw_style">
                            <RadioButton
                                android:id="@+id/rb_findstuw_tch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:button="@drawable/color_radiobutton"
                                android:text="老师上门"
                                />
                            <RadioButton
                                android:id="@+id/rb_findstuw_stu"
                                android:layout_width="wrap_content"
                                android:button="@drawable/color_radiobutton"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="学生上门"/>
                            <RadioButton
                                android:id="@+id/rb_findstuw_loc"
                                android:layout_width="wrap_content"
                                android:button="@drawable/color_radiobutton"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="协商地点"/>
                        </RadioGroup>
                    </RelativeLayout>
                </LinearLayout>
                <TextView style="@style/SeparatorLine" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10.0dip">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">

                        <TextView
                            android:id="@+id/tv_findstuw_price"
                            style="@style/AccountText"
                            android:text="价格区间："
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/edit_findstuw_price"
                            style="@style/AccountEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_findstuw_price"
                            android:ems="10"
                            android:hint="自填(80~100)"
                            android:imeOptions="actionDone"
                            android:maxLength="10"
                            android:password="true"
                            android:textColorHint="@color/gray_light"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true">
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_pancil"
                    android:id="@+id/iv_findstuw_pancil"/>
                <EditText
                    android:textColorHint="@color/gray_light"
                    android:gravity="top"
                    android:padding="10dp"
                    android:id="@+id/edit_findstuw_intro"
                    android:background="@drawable/login_bg"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="20.0dip"
                    android:minHeight="100.0dip"
                    android:hint="      请输入描述:"
                    android:maxLength="100"
                    android:inputType="textMultiLine"
                    style="@style/ReleaseEdit"
                    android:layout_toRightOf="@+id/iv_findstuw_pancil"
                    android:layout_toEndOf="@+id/iv_findstuw_pancil"/>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_findstu_put"
                android:textColor="@color/white"
                android:background="@drawable/bg_round_yellow_corner"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_marginLeft="60.0dip"
                android:layout_marginTop="@dimen/contact_activity_header_padding_top"
                android:layout_marginRight="60.0dip"
                android:layout_marginBottom="@dimen/contact_activity_header_padding_top"
                android:text="提交信息"  />
        </LinearLayout>
    </ScrollView>
</LinearLayout>