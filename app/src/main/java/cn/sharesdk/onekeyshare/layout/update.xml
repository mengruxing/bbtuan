<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15.0dip"
    android:layout_marginRight="15.0dip"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_talking_white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/dlg_update_text"
            android:gravity="center"
            android:paddingBottom="1.0dip"
            android:paddingLeft="21.0dip"
            android:paddingRight="19.0dip"
            android:text="检测到新版本"
            android:textAppearance="@style/style_item_font_16"
            android:textColor="@color/cltxt_title_color" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2.0px" />

        <LinearLayout android:orientation="horizontal"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView android:gravity="center_vertical"
                android:src="@mipmap/ic_launcher"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_marginLeft="19.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="19.0dip"
                android:drawablePadding="12.0dip" />
            <TextView android:textAppearance="@style/style_item_font_16"
                android:textColor="@color/cltxt_title_color"
                android:gravity="center_vertical"
                android:id="@+id/tv_update_VerMsg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28.0dip"
                android:layout_marginRight="5.0dip"
                android:text="版本:2.0   更新日期:2015-09-29   软件大小:6.34M" android:drawablePadding="12.0dip"
                android:lineSpacingExtra="8.0dip" />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="130.0dip"
            android:layout_marginTop="10.0dip"
            android:fadeScrollbars="false" >

            <EditText
                android:id="@+id/tvUpdateMessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19.0dip"
                android:layout_marginRight="19.0dip"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center_vertical"
                android:lineSpacingExtra="8.0dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:textAppearance="@style/style_item_font_16"
                android:textColor="@color/cltxt_title_color" 
                android:text="前几天发现一同学走路总是一瘸一拐的，问他怎么了他也总是沉默不语。今天忽然见他更新了一条说说：不要让我逮到你！在没灯的洗手间里，把马桶刷放马桶里不拿出来的贱人！！"
                />
        </ScrollView>
        <TextView
            android:id="@+id/tv_forget_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginLeft="19.0dip"
            android:layout_marginRight="19.0dip"
            android:clickable="true"
            android:layout_gravity="left"
            android:drawableLeft="@mipmap/unaccept"
            android:drawablePadding="4.0dip"
            android:gravity="center_vertical"
            android:text="忽略此版本"
            android:textColor="#ff6a6a6a"
            android:textSize="16.0sp" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginTop="10.0dip"
            android:src="#16e691"/>


    </LinearLayout>

</RelativeLayout>