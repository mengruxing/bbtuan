<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@color/radar_bg">
    <include
        layout="@layout/top_bar_btn" />
    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:background="@mipmap/ic_component_radar_board"
        >
        <boyue.bbtuan.view.RadarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_gravity="center">
        </boyue.bbtuan.view.RadarView>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/ic_find_radar_love"
                android:id="@+id/iv_radar_love"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20.0sp"
                android:text="有缘人"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="3dp"
                android:layout_alignBottom="@+id/iv_radar_love"
                android:layout_toRightOf="@+id/iv_radar_love"
                android:layout_toEndOf="@+id/iv_radar_love"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_bar_text"
                    android:textSize="20.0sp"
                    android:layout_marginBottom="3dp"
                    android:text="更多"
                    android:layout_gravity="center"
                    android:layout_alignBottom="@+id/iv_radar_love"
                    android:layout_toLeftOf="@+id/iv_radar_more"
                    android:layout_toStartOf="@+id/iv_radar_more"/>
            <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       style="@style/personal_arrow"
                       android:id="@+id/iv_radar_more"/>
        </RelativeLayout>
        <TextView style="@style/SeparatorLine" />
        <GridView
            android:id="@+id/gridview_radar"
            android:descendantFocusability="beforeDescendants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnWidth="110dip"
            android:gravity="center"
            android:horizontalSpacing="2dip"
            android:smoothScrollbar="true"
            android:fadingEdge="vertical"
            android:scrollbars="none"
            android:cacheColorHint="@color/transparent"
            android:numColumns="4"
            android:paddingTop="3dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dip" >
        </GridView>
    </LinearLayout>
</LinearLayout>