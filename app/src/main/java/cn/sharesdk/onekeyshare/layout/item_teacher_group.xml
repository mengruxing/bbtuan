<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
<include layout="@layout/top_bar_btn"></include>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="visible">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科目"
                android:layout_margin="10dp"
                style="@style/style_item_font_17"
                android:id="@+id/tv_group_sign_objname"/>
            <TextView
                android:id="@+id/tv_group_sign_obj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高等数学A1"
                style="@style/style_item_font_17"
                android:layout_alignTop="@+id/tv_group_sign_objname"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
            <TextView style="@style/SeparatorLine" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="学生信息"
                style="@style/style_item_font_17"/>
            <TextView style="@style/SeparatorLine" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginBottom="5.0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10.0dip"
                    >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">

                        <TextView
                            android:id="@+id/tv_group_signname"
                            style="@style/AccountText"
                            android:textColor="@color/black"
                            android:text="姓名：" />

                        <EditText
                            android:id="@+id/edit_group_signname"
                            style="@style/AccountEdit"
                            android:imeOptions="actionDone"
                            android:maxLength="10"
                            android:textColorHint="@color/gray_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_group_signname"
                            android:ems="10"
                            android:hint="请输入姓名"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true">

                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <TextView style="@style/SeparatorLine" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10.0dip">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">

                        <TextView
                            android:id="@+id/tv_tv_group_signid"
                            style="@style/AccountText"
                            android:text="学号："
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/edit_group_signid"
                            style="@style/AccountEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_tv_group_signid"
                            android:ems="10"
                            android:hint="请输入学号"
                            android:inputType="phone"
                            android:imeOptions="actionDone"
                            android:maxLength="10"
                            android:textColorHint="@color/gray_light"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true">

                        </EditText>
                    </RelativeLayout>
                </LinearLayout>
                <TextView style="@style/SeparatorLine" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10.0dip">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">

                        <TextView
                            android:id="@+id/tv_group_signgrade"
                            style="@style/AccountText"
                            android:text="年级："
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/edit_group_signgrade"
                            style="@style/AccountEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_group_signgrade"
                            android:ems="10"
                            android:text="大一"
                            android:imeOptions="actionDone"
                            android:maxLength="10"
                            android:textColorHint="@color/gray_light"
                            android:layout_toLeftOf="@+id/iv_group_signgrade"
                            android:layout_toStartOf="@+id/iv_group_signgrade">
                        </TextView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/group_activities_white_down"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/iv_group_signgrade"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView style="@style/SeparatorLine" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10.0dip">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">

                        <TextView
                            android:id="@+id/tv_group_signphone"
                            style="@style/AccountText"
                            android:text="联系方式："
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/edit_group_signphone"
                            style="@style/AccountEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_group_signphone"
                            android:ems="11"
                            android:hint="请输入联系方式(手机号码)"
                            android:imeOptions="actionDone"
                            android:maxLength="11"
                            android:inputType="phone"
                            android:textColorHint="@color/gray_light"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true">
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView style="@style/SeparatorLine" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="辅导地点"
                    style="@style/style_item_font_17"
                    android:id="@+id/textView4"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:fadingEdge="none"
                    android:layout_gravity="center"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_toRightOf="@+id/textView4"
                    android:layout_toEndOf="@+id/textView4"
                    android:weightSum="1">

                    <RadioButton
                        android:id="@+id/rb_group_signloc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:button="@drawable/color_radiobutton"
                        android:text="协商地点"
                        />
                    <RadioButton
                        android:id="@+id/rb_group_signmloc"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:button="@drawable/color_radiobutton"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="自填："/>
                    <EditText
                        android:id="@+id/edit_group_signmloc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AccountEdit"
                        android:imeOptions="actionDone"
                        android:maxLength="30"
                        android:hint="输入时间地点"
                        android:textColorHint="@color/gray_light"
                        android:layout_weight="5.45"/>
                </RadioGroup>
            </RelativeLayout>
            <TextView style="@style/SeparatorLine" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="初定地点:"
                    style="@style/style_item_font_17"
                    android:id="@+id/textView5"/>
                <TextView
                    android:id="@+id/tv_group_signloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13周周四晚8:00-9:30"
                    style="@style/style_item_font_14"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_toRightOf="@+id/textView5"
                    android:layout_toEndOf="@+id/textView5"/>
            </RelativeLayout>
            <TextView style="@style/SeparatorLine" />
            <LinearLayout
                android:id="@+id/linLay_group_signnum"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="报名数量:"
                    style="@style/style_item_font_17"/>
                <LinearLayout
                    android:id="@+id/linLay_group_signreduce"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_btn_shape_put">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="-"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_group_signnum"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/list_bg_objnum"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="0"
                    android:paddingBottom="1.0dip"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:textColor="@color/white"
                    android:textSize="14.0sp"/>
                <LinearLayout
                    android:id="@+id/linLay_group_signadd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_btn_shape_put">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:id="@+id/line_group_signnum"
                style="@style/SeparatorLine" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_group_signoprice0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="课程原价:"
                    style="@style/style_item_font_17"/>
                <TextView
                    android:id="@+id/tv_group_signoprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="129"
                    android:layout_gravity="center"
                    style="@style/style_item_font_17"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="元"
                    style="@style/style_item_font_17"/>
            </LinearLayout>
            <TextView style="@style/SeparatorLine" />
            <LinearLayout
                android:id="@+id/linLay_group_signprice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="团购价:"
                    style="@style/style_item_font_17"/>
                <TextView
                    android:id="@+id/tv_group_signprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="99"
                    android:layout_gravity="center"
                    style="@style/style_item_font_17"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="元"
                    style="@style/style_item_font_17"/>
            </LinearLayout>
            <TextView android:id="@+id/line_group_signprice"
                style="@style/SeparatorLine" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="支付方式:"
                    style="@style/style_item_font_17"/>
            </LinearLayout>
            <TextView style="@style/SeparatorLine" />
            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:fadingEdge="none"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:weightSum="3">
                <RadioButton
                    android:id="@+id/rb_group_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/color_radiobutton"
                    android:text="线上支付"
                    />
                <RadioButton
                    android:id="@+id/rb_group_signdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/color_radiobutton"
                    android:text="线下支付"
                    />
                <RadioButton
                    android:id="@+id/rb_group_signstage"
                    android:layout_width="wrap_content"
                    android:button="@drawable/color_radiobutton"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="申请分期支付"/>
            </RadioGroup>
            <TextView style="@style/SeparatorLine" />
            <Button
                android:id="@+id/btn_group_signput"
                android:textColor="@color/white"
                android:background="@drawable/bg_round_yellow_corner"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_marginLeft="60.0dip"
                android:layout_marginTop="@dimen/contact_activity_header_padding_top"
                android:layout_marginRight="60.0dip"
                android:layout_marginBottom="@dimen/contact_activity_header_padding_top"
                android:text="确认订单"  />
        </LinearLayout>
    </ScrollView>
</LinearLayout>