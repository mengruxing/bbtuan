<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="110dp"
              android:layout_height="120dp">
    <boyue.bbtuan.view.CircleImageView
        android:id="@+id/ciriv_radar_hrad"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_ceshi_head"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tv_radar_headname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16.0sp"
        android:layout_marginTop="5dp"
        android:text="风吹屁屁凉"
        android:layout_gravity="center_horizontal">
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:id="@+id/linLay_radar_headsex"
            android:layout_width="28dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_personalinfo_female"
            >
            <TextView
                android:id="@+id/tv_radar_headage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="18"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="4dp"
                android:textSize="12.0sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_radar_headrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_bar_text"
            android:textSize="12.0sp"
            android:text="500m"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>