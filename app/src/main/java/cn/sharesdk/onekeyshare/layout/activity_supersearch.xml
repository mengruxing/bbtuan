<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@color/bg_main"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10.0dip"
            android:id="@+id/linLay_top_supersearch">

            <Button
                android:id="@+id/btn_top_back"
                android:layout_width="40.0dip"
                android:layout_height="30.0dip"
                android:background="@mipmap/ic_preview_back"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                />
        </LinearLayout>
        <View
            android:id="@+id/line1"
            android:layout_width="20dip"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linLay_top_supersearch"
            android:layout_toEndOf="@+id/linLay_top_supersearch">
        </View>
        <EditText
            android:textSize="12.0sp"
            android:textColor="#ff373737"
            android:layout_gravity="center_vertical"
            android:id="@+id/edit_search"
            android:background="@drawable/input_search_bg"
            android:focusable="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:focusableInTouchMode="true"
            android:layout_width="100dip"
            android:layout_height="40.0dip"
            android:hint="搜索课程、老师"
            android:singleLine="true"
            android:maxLength="20"
            android:drawableLeft="@mipmap/ic_search"
            android:drawablePadding="10.0dip"
            android:completionThreshold="1"
            android:dropDownWidth="fill_parent"
            android:imeOptions="actionDone"
            android:dropDownVerticalOffset="1.0dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_super_search"
            android:layout_toRightOf="@+id/line1"
            android:layout_toEndOf="@+id/line1"/>
        <ImageView
            android:id="@+id/iv_super_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_found_search_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门搜索"
            android:textSize="20.0sp"
            style="@style/AccountText"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/ic_hot_search"
            android:textColor="@color/gray_light"/>
        <TextView
            android:id="@+id/tv_supersearch_keyref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换一换"
            style="@style/AccountText"
            android:textColor="@color/gray_light"
            android:textSize="20.0sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp"/>
    </RelativeLayout>
    <boyue.bbtuan.view.KeywordsFlow
        android:id="@+id/fraLay_supersearch_keyref"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearLayout1" >
    </boyue.bbtuan.view.KeywordsFlow>
</LinearLayout>