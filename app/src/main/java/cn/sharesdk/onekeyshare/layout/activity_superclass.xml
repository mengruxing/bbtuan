<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@color/bg_main"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10.0dip"
            android:id="@+id/linearLayout">

            <Button
                android:id="@+id/btn_supertop_back"
                android:layout_width="40.0dip"
                android:layout_height="30.0dip"
                android:background="@mipmap/ic_preview_back"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_city_indictor"
            android:id="@+id/iv_city_indictor"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_toLeftOf="@+id/tv_school_name"
            android:layout_toStartOf="@+id/tv_school_name"/>
        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="桂林电子科技大学"
            android:textSize="22.0sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_super_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_found_search_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <boyue.bbtuan.view.ScrollListView
        android:id="@+id/scroll_supercalss"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:background="@color/gray_bg"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
    <include
        layout="@layout/item_viewflow"
        ></include>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_nearly_stu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_nearly_stu"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_find_stu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_find_stu"
            android:layout_weight="1"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <LinearLayout
                android:id="@+id/linLay_superclass_home"
                android:layout_width="match_parent"
                android:background="#f6f6f6"
                android:layout_height="600dp">
            <boyue.bbtuan.xlist.XListView
                android:id="@+id/lv_superclass_home"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:fadeScrollbars="true"
                android:listSelector="@android:color/transparent"
                android:cacheColorHint="@android:color/transparent"
                >
            </boyue.bbtuan.xlist.XListView>
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </boyue.bbtuan.view.ScrollListView>
</LinearLayout>