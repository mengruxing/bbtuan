<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/lay_item"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="94.0dip">
        <boyue.bbtuan.view.RoundImageView
            android:id="@+id/iv_nearitem_img"
            android:layout_width="68.0dip"
            android:layout_height="80.0dip"
            android:layout_marginLeft="12.0dip"
            android:src="@mipmap/ic_ceshi_head"
            android:scaleType="fitXY"
            android:layout_centerVertical="true" />
        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_toRightOf="@id/iv_nearitem_img"
            android:layout_alignTop="@id/iv_nearitem_img"
            android:layout_alignBottom="@id/iv_nearitem_img">
            <TextView
                android:textSize="16.0dip"
                android:textColor="@color/cltxt_title_color"
                android:id="@+id/tv_nearitem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学霸就是我" />
            <TextView
                android:textSize="14.0dip"
                android:textColor="@color/black"
                android:id="@+id/tv_nearitem_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:layout_below="@+id/tv_nearitem_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="5dp"/>
            <TextView
                android:textSize="14.0dip"
                android:textColor="@color/black"
                android:id="@+id/tv_nearitem_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20岁"
                android:paddingTop="5dp"
                android:layout_alignTop="@+id/tv_nearitem_sex"
                android:layout_toRightOf="@+id/tv_nearitem_sex"
                android:layout_toEndOf="@+id/tv_nearitem_sex"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"/>
            <TextView
                        android:layout_gravity="center_vertical"
                       android:id="@+id/tv_nearitem_label"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                        android:textColor="@color/gray_light"
                        android:text="学霸"
                        android:layout_alignBaseline="@+id/tv_nearitem_dist"
                        android:layout_alignBottom="@+id/tv_nearitem_dist"
                        android:layout_alignLeft="@+id/tv_nearitem_grade"
                        android:layout_alignStart="@+id/tv_nearitem_grade"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_nearitem_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_light"
                android:text="0.9km"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:layout_alignBottom="@+id/thitem_tv_subject"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
            <TextView android:textSize="12.0dip"
                      android:textColor="@color/gray_light"
                      android:id="@+id/tv_nearitem_sign"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="想远离挂科吗。。。那就来找我吧！哈哈哈哈哈"
                      android:layout_below="@+id/tv_nearitem_college"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"
                      android:paddingTop="5dp"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentEnd="true"/>
            <TextView android:textSize="12.0dip"
                      android:textColor="@color/black"
                      android:id="@+id/tv_nearitem_college"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="电子工程与自动化"
                      android:paddingTop="20dp"
                      android:layout_centerVertical="true"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"/>
            <TextView android:textSize="12.0dip"
                      android:textColor="@color/black"
                      android:id="@+id/tv_nearitem_grade"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="2013级"
                      android:paddingTop="20dp"
                      android:layout_alignBaseline="@+id/tv_nearitem_college"
                      android:layout_alignBottom="@+id/tv_nearitem_college"
                      android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>