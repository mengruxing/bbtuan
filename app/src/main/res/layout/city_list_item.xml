<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/city_list_item_alpha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_main"
        android:paddingLeft="13dip"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#99CCFF"
         />
    <ImageView
        android:id="@+id/city_list_item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/city_list_item_alpha"
        android:layout_marginRight="5.0dip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/city_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="name"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black"
        android:layout_below="@+id/city_list_item_alpha"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"/>
    <!-- android:layout_toRightOf="@id/image_view" -->

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/city_list_item_name"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/city_list_item_name"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="number"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/white"
        android:visibility="gone" />
    <View android:layout_marginLeft="20.0dip"
          android:layout_marginRight="20.0dip"
          android:layout_below="@+id/city_list_item_name"
          style="@style/line"
          android:id="@+id/view"/>
</RelativeLayout>