<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
            android:background="@color/gray_bg">
    <include layout="@layout/top_bar_btn" />
<boyue.bbtuan.view.CircleImageView
    android:id="@+id/civ_login_head"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@mipmap/ic_ceshi_head"
    android:layout_margin="20dp"
    android:layout_gravity="center_horizontal"
    />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="10.0dip">

                <TextView
                    style="@style/AccountText"
                    android:text="账号" />

                <AutoCompleteTextView
                    android:id="@+id/edit_login_user"
                    style="@style/AccountEdit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColorHint="@color/gray_light" />
            </LinearLayout>

            <TextView style="@style/SeparatorLine" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="10.0dip">

                <RelativeLayout
                    android:id="@+id/relLay_ps"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip">

                    <TextView
                        android:id="@+id/tv_ml"
                        style="@style/AccountText"
                        android:text="密码" />

                    <ImageView
                        android:id="@+id/iv_login_ps_sh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/password_dide" />

                    <EditText
                        android:id="@+id/edit_login_passed"
                        style="@style/AccountEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_ml"
                        android:ems="10"
                        android:hint="请输入密码"
                        android:imeOptions="actionDone"
                        android:maxLength="10"
                        android:password="true"
                        android:textColorHint="@color/gray_light">

                    </EditText>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_login_put"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        style="@style/BigButton"
        android:textColor="@color/white"
        android:textSize="22.0sp"
        android:background="@drawable/bg_btn_shape_put"
        android:text="登陆" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_forget_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#0000"
            android:text="忘记密码?"
            android:textColor="@color/bg_main"
            android:textSize="22sp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="15.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@mipmap/ic_loginline"
        android:orientation="horizontal">
    </ImageView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn_login_qq"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@mipmap/ic_qqlogin" />

        <ImageButton
            android:id="@+id/imgbtn_login_weixin"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@mipmap/ic_weixinlogin" />

        <ImageButton
            android:id="@+id/imgbtn_login_sina"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@mipmap/ic_sinalogin" />
    </LinearLayout>
    </LinearLayout>